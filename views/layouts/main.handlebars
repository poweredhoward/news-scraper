    <link rel="stylesheet" href="style.css">
    
    <title>New York Times</title>
</head>
<body>
    <div class="jumbotron text-center">
        <div class="caption">
            <h1>Mongo Scraper</h1>
            <h2>Read the New York Times Tech Section</h2>
            <button class="btn" id="scrapenew" style="color: white; background-color:rgb(39, 74, 187);">Scrape New Articles and Delete Current Ones</button>
        </div>
    </div>
<div id="add-note-modal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Add Note About Article</h4>
            </div>
            <div class="modal-body">
                <p>Add a note about the article</p>
                <textarea id="noteBody" rows="4" cols="60"></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button id="addNote" type="button" class="btn btn-primary">Add Note</button>
            </div>
        </div>
    </div>
</div>


<div id="view-notes-modal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Notes For This Article</h4>
            </div>
            <div class="modal-body">
                <div id="note-list">
                    {{!-- Where notes will go --}}
                </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
</div>
